<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="食研所|无糖奶茶不会胖，珍珠换燕麦就健康？你要知道奶茶真相"
        android:textColor="#2c2c2c"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo1"
        android:layout_width="129dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/photo2"
        app:layout_constraintTop_toBottomOf="@+id/newsTitle" />

    <ImageView
        android:id="@+id/photo2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/photo1"
        app:layout_constraintRight_toLeftOf="@+id/photo3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsTitle" />

    <ImageView
        android:id="@+id/photo3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/photo2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsTitle" />

    <TextView
        android:id="@+id/commentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="柴桑智商评"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo1" />

    <TextView
        android:id="@+id/commentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:text="9评"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/commentType"
        app:layout_constraintTop_toBottomOf="@+id/photo1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:src="@drawable/chahao"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintLeft_toRightOf="@+id/commentNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo3" />

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commentType"></view>

</android.support.constraint.ConstraintLayout>